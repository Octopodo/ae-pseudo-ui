---
import { IoIosSearch   } 
from "react-icons/io";

---

<div class="search-area">
  <IoIosSearch/>
  <input type="text" class="input-search"></input>
</div>

<style>
  .search-area {
    position: relative;
    width: 95%;
    height: 100%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    background-color: var(--darker);
    align-items: center;
    border-radius: 5px;
  }
  
  .input-search {
    background-color: var(--darker);
    width: 100%;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--lighter);
    border: none;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    font-weight: 300 !important;
    cursor: text;
  }



  .input-search:focus {
    border: none;
    outline: none;
    background-color: var(--light);
    color: var(--darker);
  }

</style>