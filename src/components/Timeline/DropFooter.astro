---
import { FaMountainSun } from "react-icons/fa6";


---
<div class="container">
  <div class="footer-icon small">
    <FaMountainSun/>
  </div>
  <input type="range" class="slider">
  <div class="footer-icon" >
    <FaMountainSun/>
  </div>
  <div class="scroll">
    <div class="scroll-thumb"></div>
  </div>
</div>


<style>

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  border-top: 1px solid var(--darker);
  border-bottom: 1px solid var(--darker);
}

.scroll {
  margin-left: 10px;
  width: 100%;
  height: 100%;
  background: var(--darker);
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.scroll-thumb {
  width: 20%;
  height: 1rem;
  background: var(--dark);
  border-radius: 50px;
  margin-left: 6px;
}

.footer-icon{
  color: var(--dark-gray);
}

.small > * {
  width: 0.5rem;
  height: 0.5rem;
}

.slider {
  -webkit-appearance: none;
  width: 10%;
  top: 0;
  bottom: 0;
  margin: auto 10px;

}

.slider::-webkit-slider-runnable-track {
  background: var(--dark-gray);
  height: 2px;
  border-radius: 50px;
}

.slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 10px;
  width: 10px;
  background: var(--dark-gray);
  border-radius: 50%;

  margin-top: -4px; /* Para centrar el pulgar en la pista */
}
</style>